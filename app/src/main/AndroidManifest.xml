<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.hotmann.edgar.wareneingang">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcherverybig"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity
            android:name=".Eingang.WareneingangPaletten"
            android:configChanges="screenSize"
            android:parentActivityName=".MainstartActivity" />
        <activity
            android:name=".Eingang.Auswertung.TableViewActivity"
            android:label="@string/title_activity_table_view"
            android:parentActivityName=".MainstartActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.hotmann.edgar.wareneingang.Eingang.WareneingangPaletten" />
        </activity>
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation" />
        <activity
            android:name=".MainstartActivity"
            android:label="@string/title_activity_mainstart"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
     ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".LocationsActivity"
            android:label="@string/title_activity_locations"
            android:parentActivityName=".MainstartActivity"
            android:theme="@style/NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.hotmann.edgar.wareneingang.MainstartActivity" />
        </activity>
    </application>

</manifest>